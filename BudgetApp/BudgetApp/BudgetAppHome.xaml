<Page x:Class="BudgetApp.BudgetAppHome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BudgetApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BudgetAppHome">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TabControl Background="#4E87D4" Padding="5" Grid.RowSpan="3">
            <TabItem Header="_Home" Style="{StaticResource Simple}">
                <ListBox Name="homeListBox">
                </ListBox>
            </TabItem>
            <TabItem Header="_Budget Overview"  Style="{StaticResource Simple}"></TabItem>
            <TabItem Header="_Account Overview" Style="{StaticResource Simple}"></TabItem>
        </TabControl>
        
        
        <Button Grid.Column="1" Grid.Row="2" Margin="0,10,0,0" Width="125" Height="25" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="viewListItem">View</Button>
    </Grid>
</Page>
